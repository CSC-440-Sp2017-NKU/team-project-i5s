<% # <HUNTER> : functional but ugly %>

<div class="question-forum">
    <h3><span>SECTION PAGE</span><span class="arial">//</span><%=@section.course.course_name+"-"+@section.full_name%></h3>
</div>

<h4><strong>Instructor</strong></h4>
<p><a href="<%= url_for action:"view", controller:"users", id:@section.user_id %>"><%= @section.instructor&.user_name %></a></p>

